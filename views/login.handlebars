<form class="login-form" action="/api/users/login" method="POST">
  <div>
    <label for="email-login">Email:</label>
    <input type="text" id="email-login" name="email" />
  </div>
  <div>
    <label for="password-login">Password:</label>
    <input type="password" id="password-login" name="password" />
  </div>
  <div>
    <button type="submit">Login</button>
  </div>
</form>

<form class="signup-form" action="/api/users" method="POST">
  <div>
    <label for="username-signup">Username:</label>
    <input type="text" id="username-signup" name="username" />
  </div>
  <div>
    <label for="email-signup">Email:</label>
    <input type="text" id="email-signup" name="email" />
  </div>
  <div>
    <label for="password-signup">Password:</label>
    <input type="password" id="password-signup" name="password" />
  </div>
  <div>
    <button type="submit">Signup</button>
  </div>
</form>

<script src="/javascript/login.js"></script>